<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="3dp"
    android:id="@+id/cv_pjmore"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:scaleType="fitXY"
        android:layout_weight="0.88"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:padding="5dp">

        <ImageView
            android:id="@+id/profile_pic"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:contentDescription="TODO"
            android:scaleType="fitXY"
            android:src="@drawable/pro01"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <!-- TextView Nama Mahasiwa -->
        <TextView
            android:id="@+id/txt_nama_pj"
            android:layout_width="153dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/profile_pic"
            android:text="Edgardo Hamdola"
            android:textColor="@color/call"
            android:textStyle="bold" />


        <!-- TextView Npm Mahasiswa -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_nama_pj"
            android:layout_toEndOf="@+id/profile_pic"
            android:id="@+id/linearLayout">

            <ImageView
                android:id="@+id/icontelp"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_below="@+id/txt_nama_pj"
                android:layout_gravity="center"
                android:layout_toRightOf="@id/profile_pic"
                android:padding="2dp"
                android:src="@drawable/ic_call_black_24dp" />

            <TextView
                android:id="@+id/txt_nohp_pj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_nama_pj"
                android:layout_gravity="center"
                android:layout_toEndOf="@+id/icontelp"
                android:padding="2dp"
                android:text="087780940840"
                android:textColor="@color/call"
                android:textSize="10sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/txt_shift_pj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/profile_pic"
            android:minLines="3"
            android:text="JKL | JKD |FPGA"
            android:textSize="10sp"
            android:layout_below="@+id/linearLayout" />


    </RelativeLayout>

</android.support.v7.widget.CardView>